@charset "UTF-8";
/* 自定义导航条 */
page {
  background: #f7f7f7;
}

.navbar {
  background: #01ab9d;
  background-size: cover;
  position: relative;
  display: flex;
  flex-direction: column;
  padding-top: 20px;
}

.navbar .logo {
  display: flex;
  align-items: center;
  height: 64rpx;
  padding-left: 30rpx;
  padding-top: 20rpx;
}

.navbar .logo .logo-image {
  width: 300rpx;
  height: 80rpx;
}

.navbar .logo .logo-text {
  flex: 1;
  line-height: 28rpx;
  color: #fff;
  margin: 2rpx 0 0 20rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid #fff;
  font-size: 26rpx;
}

.navbar .search {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx 0 26rpx;
  height: 64rpx;
  margin: 16rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.5);
}

.navbar .icon-search::before {
  margin-right: 10rpx;
}

.navbar .icon-scan {
  font-size: 30rpx;
  padding: 15rpx;
}

@font-face {
  font-family: "iconfont";
  /* Project id 4273904 */
  src: url("//at.alicdn.com/t/c/font_4273904_002ycw15jjeba.woff2?t=1696490346497") format("woff2"), url("//at.alicdn.com/t/c/font_4273904_002ycw15jjeba.woff?t=1696490346497") format("woff"), url("//at.alicdn.com/t/c/font_4273904_002ycw15jjeba.ttf?t=1696490346497") format("truetype");
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-sousuo:before {
  content: "\e651";
}

.icon-saomiao:before {
  content: "\e61b";
}

.category {
  padding: 40rpx 30rpx;
}

.category scroll-view {
  white-space: nowrap;
}

.category scroll-view .item {
  display: inline-block;
  padding: 0 30rpx;
  text-align: center;
}

.category scroll-view .item .pic {
  width: 72rpx;
  height: 72rpx;
}

.category scroll-view .item .pic image {
  width: 100%;
  height: 100%;
}

.category scroll-view .item .text {
  font-size: 32rpx;
  color: #888888;
}

.category scroll-view .item:first-child {
  padding-left: 0;
}

.category scroll-view .item:last-child {
  padding-right: 0;
}

.footer {
  padding: 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: var(--descColor);
}

/* 分类标题 */
.caption {
  display: flex;
  justify-content: center;
  line-height: 1;
  padding: 36rpx 0 40rpx;
  font-size: 32rpx;
  color: #262626;
}

.caption .img1, .caption .img2 {
  width: 20rpx;
  height: 20rpx;
  margin: 7rpx -20rpx;
}

.caption .text {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 28rpx 0 30rpx;
}

/* 猜你喜欢 */
.guess {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}

.guess .guess-item {
  width: 300rpx;
  padding: 20rpx 22rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
}

.guess .image {
  width: 304rpx;
  height: 304rpx;
}

.guess .name {
  height: 75rpx;
  margin: 10rpx 0;
  font-size: 26rpx;
  color: #262626;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.guess .price {
  line-height: 1;
  padding-top: 4rpx;
  color: #cf4444;
  font-size: 26rpx;
}

.guess .small {
  font-size: 80%;
}

.loadingOut {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-left: 230rpx;
}
